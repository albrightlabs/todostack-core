# ======================================
# TodoStack Configuration
# ======================================
# Copy this file to .env and customize
# ======================================

# --------------------------------------
# Site Identity
# --------------------------------------
# Site name appears in the header and browser title
SITE_NAME="TodoStack"

# Short tagline (reserved for future use)
SITE_TAGLINE="Simple, fast task management"

# Emoji displayed when no logo is set (shown before site name)
SITE_EMOJI=""

# Base URL for generating absolute URLs (optional)
SITE_URL=""

# --------------------------------------
# Branding - Images
# --------------------------------------
# Path to logo image (PNG, SVG, or WebP recommended)
# Height will be constrained to 24px for optimal header sizing
LOGO_URL=""

# Logo width constraint (CSS value, e.g., "120" or "120px")
LOGO_WIDTH="120"

# Custom favicon path (PNG recommended, 32x32px or larger)
FAVICON_URL=""

# Custom emoji for favicon (overrides SITE_EMOJI for favicon only)
FAVICON_EMOJI=""

# Custom letter overlay on favicon (defaults to first letter of SITE_NAME)
FAVICON_LETTER=""

# Show letter overlay on favicon (true/false)
FAVICON_SHOW_LETTER=true

# --------------------------------------
# Branding - Header Link
# --------------------------------------
# Optional external link displayed in header (e.g., link to main website)
EXTERNAL_LINK_NAME=""
EXTERNAL_LINK_URL=""
EXTERNAL_LINK_LOGO=""

# --------------------------------------
# Branding - Footer
# --------------------------------------
# Footer text (supports HTML)
FOOTER_TEXT=""

# Show "Powered by TodoStack" link in footer
FOOTER_SHOW_POWERED_BY=true

# --------------------------------------
# Branding - Colors
# --------------------------------------
# Primary brand color (used for buttons, links, accents)
COLOR_PRIMARY="#3b82f6"

# Primary color hover state
COLOR_PRIMARY_HOVER="#2563eb"

# --------------------------------------
# Security - Multi-User Authentication
# --------------------------------------
# Super admin email (required for initial setup)
SUPER_ADMIN_EMAIL="admin@example.com"

# Super admin password hash (generate with: php -r "echo password_hash('your-password', PASSWORD_DEFAULT);")
# Example hash for password "admin123":
# SUPER_ADMIN_PASSWORD_HASH="$2y$10$92IXUNpkjO0rOQ5byMi.Ye4oKoEa3Ro9llC/.og/at2.uheWG/igi"
SUPER_ADMIN_PASSWORD_HASH=""

# --------------------------------------
# Features
# --------------------------------------
# Enable dark mode support (auto-detects system preference)
FEATURE_DARK_MODE=true
